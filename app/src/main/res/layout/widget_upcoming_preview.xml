<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_widget_rounded"
    android:padding="12dp">

    <!-- Item 1 (First) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_widget_item_first"
        android:padding="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Netflix"
            android:textSize="14sp"
            android:fontFamily="@font/google_sans_flex"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomorrow"
            android:textSize="10sp"
            android:fontFamily="@font/google_sans_flex"
            android:textColor="@color/widget_text_accent" />
    </LinearLayout>

    <!-- Spacer -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="invisible"/>

    <!-- Item 2 (Last or Middle) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_widget_item_middle"
        android:padding="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Spotify"
            android:textSize="14sp"
            android:fontFamily="@font/google_sans_flex"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 18"
            android:textSize="10sp"
            android:fontFamily="@font/google_sans_flex"
            android:textColor="@color/widget_text_accent" />
    </LinearLayout>

    <!-- Spacer 2 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="invisible"/>

    <!-- Item 3 (Last or Middle) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_widget_item_middle"
        android:padding="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="YouTube Premium"
            android:textSize="14sp"
            android:fontFamily="@font/google_sans_flex"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jan 25"
            android:textSize="10sp"
            android:fontFamily="@font/google_sans_flex"
            android:textColor="@color/widget_text_accent" />
    </LinearLayout>

    <!-- More Indicator -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+2 more..."
        android:textSize="12sp"
        android:fontFamily="@font/google_sans_flex"
        android:textColor="@color/widget_text_more"
        android:gravity="center"
        android:paddingTop="6dp" />

</LinearLayout>
