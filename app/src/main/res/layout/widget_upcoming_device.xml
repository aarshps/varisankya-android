<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_widget_rounded"
    android:padding="12dp">

    <!-- Item 1 (First) -->
    <LinearLayout
        android:id="@+id/item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_widget_item_first"
        android:padding="15dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_name_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="—"
            android:textSize="14sp"

            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_due_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/widget_text_accent" />
    </LinearLayout>

    <!-- Spacer -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="invisible"/>

    <!-- Item 2 (Middle or Last) -->
    <LinearLayout
        android:id="@+id/item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_widget_item_last"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_name_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="—"
            android:textSize="14sp"

            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_due_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/widget_text_accent" />
    </LinearLayout>

    <!-- Spacer 2 -->
    <ImageView
        android:id="@+id/spacer_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"/>

    <!-- Item 3 (Last or Middle) -->
    <LinearLayout
        android:id="@+id/item_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_widget_item_last"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_name_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="—"
            android:textSize="14sp"
            android:textColor="@color/widget_text_primary"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_due_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/widget_text_accent" />
    </LinearLayout>

</LinearLayout>
