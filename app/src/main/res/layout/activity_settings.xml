<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerLow"
    tools:context=".SettingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="?attr/colorSurfaceContainerLow"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorSurfaceContainerLow"
            app:titleTextAppearance="?attr/textAppearanceTitleLarge" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/settings_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="12dp"
            android:paddingHorizontal="0dp">

            <!-- Hero Settings Header -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_settings_hero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="?attr/colorPrimary"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/settings_hero_text_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APP PREFERENCES"
                            android:textAppearance="?attr/textAppearanceLabelLarge"
                            android:textColor="?attr/colorOnPrimary"
                            android:letterSpacing="0.1"
                            android:alpha="0.8"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Financial Clarity"
                            android:textStyle="bold"
                            android:textAppearance="?attr/textAppearanceDisplaySmall"
                            android:textColor="?attr/colorOnPrimary"
                            android:letterSpacing="-0.01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Experience premium control"
                            android:textAppearance="?attr/textAppearanceBodyMedium"
                            android:textColor="?attr/colorOnPrimary"
                            android:alpha="0.9" />

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
            
            <!-- Security Card (Biometrics) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_security"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                android:layout_marginBottom="@dimen/group_item_spacing"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/card_padding_horizontal"
                    android:paddingTop="@dimen/card_padding_vertical"
                    android:paddingEnd="@dimen/card_padding_horizontal"
                    android:paddingBottom="@dimen/card_padding_vertical">

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security"
                        android:textColor="?attr/colorOnSurface" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App Lock"
                                style="@style/TextAppearance.Material3.TitleSmall"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Require authentication on launch"
                                style="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                        </LinearLayout>

                        <com.google.android.material.materialswitch.MaterialSwitch
                            android:id="@+id/switch_biometric"
                            style="@style/Widget.App.Switch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Appearance Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_appearance"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                android:layout_marginBottom="@dimen/group_item_spacing"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/card_padding_horizontal"
                    android:paddingTop="@dimen/card_padding_vertical"
                    android:paddingEnd="@dimen/card_padding_horizontal"
                    android:paddingBottom="@dimen/card_padding_vertical">

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Appearance"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Dark Mode Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Dark Mode"
                        style="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/theme_toggle_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/theme_device"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="System"
                            app:checkedIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/theme_light"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Light"
                            app:checkedIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/theme_dark"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dark"
                            app:checkedIconVisible="false" />
                    </com.google.android.material.chip.ChipGroup>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Typography Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_typography"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                android:layout_marginBottom="@dimen/group_item_spacing"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/card_padding_horizontal"
                    android:paddingTop="@dimen/card_padding_vertical"
                    android:paddingEnd="@dimen/card_padding_horizontal"
                    android:paddingBottom="@dimen/card_padding_vertical">

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Typography"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/font_toggle_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/font_google"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google Sans"
                            app:checkedIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/font_system"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="System"
                            app:checkedIconVisible="false" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Notifications Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_notifications"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                android:layout_marginBottom="@dimen/group_item_spacing"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/card_padding_horizontal"
                    android:paddingTop="@dimen/card_padding_vertical"
                    android:paddingEnd="@dimen/card_padding_horizontal"
                    android:paddingBottom="@dimen/card_padding_vertical">

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textColor="?attr/colorOnSurface" />

                    <!-- Notification Time -->
                    <LinearLayout
                        android:id="@+id/notification_time_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:paddingVertical="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily Reminder"
                                style="@style/TextAppearance.Material3.TitleSmall"
                                android:textColor="?attr/colorOnSurface" />
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Set time to be notified"
                                style="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                        </LinearLayout>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/notification_time_text"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:checked="true"
                            app:checkedIconVisible="false"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="08:00 AM" />
                    </LinearLayout>

                    <!-- Notification Days Slider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Notify Me"
                                style="@style/TextAppearance.Material3.TitleSmall"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/notification_days_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7 days before"
                                style="@style/TextAppearance.Material3.TitleSmall"
                                android:textColor="?attr/colorPrimary" />
                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/notification_days_slider"
                            style="@style/Widget.App.Slider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:valueFrom="0.0"
                            android:valueTo="10.0"
                            android:stepSize="1.0"
                            android:value="7.0"
                            app:trackHeight="24dp"
                            app:tickVisible="false" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Haptics Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_haptics"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                android:layout_marginBottom="@dimen/group_item_spacing"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/card_padding_horizontal"
                    android:paddingTop="@dimen/card_padding_vertical"
                    android:paddingEnd="@dimen/card_padding_horizontal"
                    android:paddingBottom="@dimen/card_padding_vertical">

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Haptics"
                        android:textColor="?attr/colorOnSurface" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/haptics_toggle_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/haptics_on"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="On"
                            app:checkedIconVisible="false" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/haptics_off"
                            style="@style/Widget.App.Chip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Off"
                            app:checkedIconVisible="false" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Help Card -->


            <!-- Legal Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_legal"
                style="?attr/materialCardViewFilledStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/card_margin_horizontal"
                android:layout_marginBottom="@dimen/group_section_spacing"
                app:cardBackgroundColor="?attr/colorSurfaceContainer"
                app:cardCornerRadius="28dp"
                app:strokeWidth="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/card_padding_horizontal"
                    android:paddingTop="@dimen/card_padding_vertical"
                    android:paddingEnd="@dimen/card_padding_horizontal"
                    android:paddingBottom="@dimen/card_padding_vertical">

                    <TextView
                        style="@style/TextAppearance.Material3.TitleMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Legal"
                        android:textColor="?attr/colorOnSurface" />

                    <LinearLayout
                        android:id="@+id/privacy_policy_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:paddingVertical="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Privacy Policy"
                                style="@style/TextAppearance.Material3.BodyLarge"
                                android:textColor="?attr/colorOnSurface" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Read about our data practices"
                                style="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_open_in_new"
                            app:tint="?attr/colorOnSurfaceVariant"
                            android:contentDescription="Open" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        <!-- Logout Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/logout_card"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="?attr/colorSurfaceContainerHigh"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_power"
                    app:tint="?attr/colorError" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Log Out"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    android:textColor="?attr/colorError"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>