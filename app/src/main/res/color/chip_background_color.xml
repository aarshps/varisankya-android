<?xml version="1.0" encoding="utf-8"?>
<!-- Chip Background: SWAPPED - Selected is dark, unselected is light -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected: Dynamic Tertiary background (High Contrast) -->
    <item android:color="?attr/colorTertiary" android:state_selected="true" />
    <item android:color="?attr/colorTertiary" android:state_checked="true" />
    <!-- Unselected: Dynamic Neutral (Tinted) background - Increased contrast -->
    <item android:color="?attr/colorSurfaceContainerHigh" />
</selector>

