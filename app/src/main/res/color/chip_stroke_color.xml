<?xml version="1.0" encoding="utf-8"?>
<!-- Chip Stroke: Visible only when unselected -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected/Checked: Transparent (solid color handles it) -->
    <item android:color="@android:color/transparent" android:state_selected="true" />
    <item android:color="@android:color/transparent" android:state_checked="true" />
    
    <!-- Unselected: Dynamic Tertiary border (Subtle Definition) -->
    <item android:color="?attr/colorTertiary" />
</selector>
